<!-- partials/recipe-card.ejs -->

<div class="col">
    <div class="card shadow-sm rounded-3 border-0" style="height: 400px; transition: transform 0.3s;">
        <!-- Recipe Image -->
        <img src="<%= recipe.image %>" class="card-img-top rounded-top" style="aspect-ratio: 1 / 1; height: 200px; object-fit: cover;" alt="<%= recipe.title %>">
        
        <div class="card-body d-flex flex-column">
            <!-- Recipe Title -->
            <h5 class="card-title fw-bold text-dark"><%= recipe.title %></h5>
            
            <!-- Recipe Description -->
            <p class="card-text text-secondary mb-3" style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; line-height: 1.4;">
                <%= recipe.description.length > 100 ? recipe.description.substring(0, 100) + '...' : recipe.description %>
            </p>
            
            <!-- Category and Cook Time -->
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="badge bg-light text-secondary px-2 py-1 rounded-pill"><%= recipe.category %></span>
                <span class="badge bg-light text-secondary px-2 py-1 rounded-pill"><i class="bi bi-clock"></i> <%= recipe.cook_time ? recipe.cook_time + ' mins' : 'No time' %></span>
            </div>
            
            <!-- Spacer to push buttons to bottom -->
            <div class="mt-auto">
                <!-- Action Buttons (View and Edit) -->
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <!-- Link to View Recipe -->
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-sm btn-outline-primary rounded-pill px-3">View</a>
                        
                        <!-- Link to Edit Recipe (only if the user is the author) -->
                        <% if (recipe.author.toString() === user?.id.toString()) { %>
                            <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-sm btn-outline-secondary rounded-pill px-3">Edit</a>
                        <% } %>
                    </div>
                    <small class="text-body-secondary"><%= recipe.createdAt.toLocaleString() %></small> <!-- Recipe creation time -->
                </div>
            </div>
        </div>
    </div>
</div>
